@model ContactsApp.Models.ContactDTO

@{
    ViewBag.Title = "Details";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f7f7f7;
    }

    h2 {
        text-align: center;
        color: #4CAF50;
        margin-top: 30px;
    }

    .details-container {
        width: 80%;
        margin: 30px auto;
        background-color: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    }

        .details-container h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
            text-align: center;
        }

    dl.dl-horizontal {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        padding: 0;
    }

        dl.dl-horizontal dt {
            font-weight: bold;
            color: #4CAF50;
            width: 30%;
            margin-bottom: 10px;
        }

        dl.dl-horizontal dd {
            width: 65%;
            margin-bottom: 10px;
            color: #555;
        }

    
    .action-link {
        color: #2196F3;
        font-weight: bold;
        text-decoration: none;
        margin-right: 15px;
        border: 2px solid transparent;
        padding: 8px 16px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .action-link:hover {
            background-color: #2196F3;
            color: white;
            border-color: #1976D2;
        }

    
    .back-link {
        color: #4CAF50;
        font-size: 16px;
        font-weight: bold;
        text-decoration: none;
        margin-top: 20px;
        display: inline-block;
    }

        .back-link:hover {
            color: #388E3C;
            text-decoration: underline;
        }
</style>


<div class="details-container">
    <h4>Contact Details</h4>
    <hr />

    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.ContactId)</dt>
        <dd>@Html.DisplayFor(model => model.ContactId)</dd>

        <dt>@Html.DisplayNameFor(model => model.first_name)</dt>
        <dd>@Html.DisplayFor(model => model.first_name)</dd>

        <dt>@Html.DisplayNameFor(model => model.last_name)</dt>
        <dd>@Html.DisplayFor(model => model.last_name)</dd>

        <dt>@Html.DisplayNameFor(model => model.email)</dt>
        <dd>@Html.DisplayFor(model => model.email)</dd>

        <dt>@Html.DisplayNameFor(model => model.phone)</dt>
        <dd>@Html.DisplayFor(model => model.phone)</dd>
    </dl>

    <div class="actions">
        <p>
            
            <a href="@Url.Action("Index")" class="action-link">Back to List</a>
        </p>
    </div>
</div>
